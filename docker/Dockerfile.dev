FROM python:3.12-slim

# Install system dependencies
RUN apt-get update && apt-get install -y \
    ffmpeg \
    build-essential \
    git \
    && rm -rf /var/lib/apt/lists/*

WORKDIR /app

# Copy requirements first for better caching
COPY install/requirements-all.txt /app/install/
RUN pip install --no-cache-dir -r install/requirements-all.txt

# Set environment variables
ENV PYTHONPATH=/app
ENV STT_DOCKER_MODE=1
ENV PYTHONUNBUFFERED=1

# Development mode - code will be mounted as volume
CMD ["python", "server.py", "start", "--debug", "--verbose"]